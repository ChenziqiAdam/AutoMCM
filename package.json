{
  "name": "automcm",
  "version": "1.0.0",
  "description": "Domain-specialized agentic workspace for Mathematical Contest in Modeling",
  "main": "frontend/main.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "test": "node test/integration/test-integration.test.js",
    "test:unit": "node test/unit/test-workspace.js && node test/unit/test-rag.js",
    "test:integration": "node test/integration/test-integration.test.js",
    "test:all": "npm run test:unit && npm run test:integration",
    "example": "node examples/simple-workflow.js",
    "advanced": "node examples/advanced-workflow.js",
    "demo-providers": "node examples/multi-provider-demo.js",
    "demo-rag": "node examples/rag-demo.js",
    "demo-complete": "node examples/complete-workflow.js"
  },
  "build": {
    "appId": "com.automcm.app",
    "productName": "AutoMCM",
    "directories": {
      "output": "dist"
    },
    "files": [
      "frontend/**/*",
      "src/**/*",
      "config/**/*",
      "templates/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "frontend/assets/icon.png"
    }
  },
  "keywords": [
    "mcm",
    "mathematical-modeling",
    "ai-agent",
    "latex",
    "contest"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@xenova/transformers": "^2.17.2",
    "codemirror": "^6.0.2",
    "dotenv": "^16.4.5",
    "katex": "^0.16.28",
    "marked": "^17.0.1",
    "pdf-parse": "^1.1.4",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
